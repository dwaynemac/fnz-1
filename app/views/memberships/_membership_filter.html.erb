<%= simple_form_for @membership_filter,
                    :url => overview_business_memberships_url(@business),
                    :method => :get,
                    :html => {:class => "membership-filter form-horizonal form-inline"}  do |f| %>
  <%= f.input :contact_name %>
  <%= f.input :payment_type_id,
                    as: :select,
                    :include_blank => t('.all'),
                    collection: @business.payment_types
  %>
  <%= f.input :status,
                    as: :select,
                    :include_blank => t('.all'),
                    collection: [["Due", :due], ["Overdue", :overdue]]
  %>
  <%= f.input :contact_teacher,
                    as: :select,
                    :include_blank => t('.all'),
                    collection: @business.agents.collect(&:padma_id)
  %>
<%= f.button :submit,
             :value => t('.filter'),
             :class => "btn btn-primary" %>
<%= link_to t('.clear_filter'), overview_business_memberships_url(@business),
             :class => "btn btn-danger" %>
<% end %>
