<%= simple_form_for(@business, :as => :business, :validate => true, :url => form_url, :html => {:class => "form-horizontal"}) do |f| %>
    <%= f.input :type, :collection => [[Personal.model_name.human, "Personal"], [School.model_name.human, "School"]], :as => :radio_buttons, :item_wrapper_class => 'inline' %>

    <%= f.input :name %>

	<%= f.input :send_weekly_reports %>

    <%= f.button :submit, :class => "btn btn-primary" %>
<% end %>