<%= simple_form_for(@product, :url => form_url, :html => {:class => "form-horizontal"}) do |f| %>

    <%= f.input :name %>
    
    <%= f.input :price %>
    <%= f.input :price_currency, :as => :select, :collection => SUPPORTED_CURRENCIES %>
    <%= f.input :cost %>
    <%= f.input :cost_currency, :as => :select, :collection => SUPPORTED_CURRENCIES %>

    <%= f.input :stock, :as => :integer %>

    <%= f.input :hidden %>

    <%= f.button :submit, :class => "btn btn-primary" %>
<% end %>