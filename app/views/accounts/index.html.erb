<% content_for :sidebar do %>
    <%= render :partial => 'businesses/edit_sidebar' %>
<% end %>

<h3>Accounts</h3>
<ul class="accounts">
  <% @accounts.each do |account| %>
  	<% unless account.new_record? %>
    <li>
      <%= link_to account.name, business_account_path(@business, account) %> <%= number_to_currency(account.balance, :unit => account.currency.symbol) %>
    </li>
    <% end %>
  <% end %>
</ul>

<br />

<%= link_to 'New Account', new_business_account_path(@business) %>