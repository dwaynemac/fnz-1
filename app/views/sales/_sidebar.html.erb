  <div class="control-group">
    <label class="control-label" for="inputSoldOn"><%= Sale.human_attribute_name(:sold_on) %></label>
    <div class="controls">
      <div class="input-prepend">
    	<span class="add-on icon-calendar"></span>
    	<input type="text" class="daterange form-control" id="sale_search_daterange" value='<%= "#{I18n.l(@start_date.to_date)} - #{I18n.l(@end_date.to_date)}" %>'/>
  	  </div>
    </div>
  </div>

<script type="text/javascript">
$(document).ready(function() {
  $('#sale_search_daterange').daterangepicker({
      ranges: {
         'Today': [moment(), moment()],
         'This Week': [moment().startOf('week'), moment()],
         'This Month': [moment().startOf('month'), moment().endOf('month')],
         'Last Month': [moment().subtract('month', 1).startOf('month'), moment().subtract('month', 1).endOf('month')]
      }
    },
    function(start, end) {
        window.location = "?start_date=" + start.format('YYYY-M-D') + "&end_date=" + end.format('YYYY-M-D');
    });
});
</script>