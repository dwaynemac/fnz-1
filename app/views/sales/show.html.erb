<% content_for :sidebar do %>
    <%= render :partial => 'sidebar' %>
<% end %>

<h3>Sale</h3>
<p>Business: <%= @sale.business.name %></p>
<p>Contact: <%= @sale.contact.try(:name) %></p>
<p>Agent: <%= @sale.agent.name %></p>
<p>Product: <%= @sale.product.try(:name) %></p>
<p>Sold on: <%= @sale.sold_on %></p>
<p>Status: <%= content_tag(:span, @sale.status, :class => "label label-#{@sale.status}") %></p>

<% if can? :manage, @business.transactions.build %>
<%= render :layout => 'transactions_table', :locals => {:transactions => @sale.transactions} do |transaction| %>
  <%= link_to content_tag(:i, "", :class => "icon-edit"), edit_business_transaction_path(transaction.business, transaction), :remote => true %>
  <%= link_to content_tag(:i, "", :class => "icon-trash"), business_transaction_path(transaction.business, transaction), :confirm => 'Are you sure you want to delete this item?', :method => 'delete' %>
<% end %>
<% end %>

<%= link_to 'Edit', edit_business_sale_path(@business, @sale) %> |
<%= link_to 'Back',:back %>
