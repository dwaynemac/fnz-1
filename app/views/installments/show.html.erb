 <% content_for :sidebar do %>
    <%= render :partial => 'memberships/sidebar' %>
<% end %>

<h2>Installment</h2>
<p>Agent: <%= @installment.agent.try(:name) %></p>
<p>Due on: <%= @installment.due_on %></p>
<p>value: <%= @installment.value %></p>

<% unless @installment.new_record? %>
	<p>Status: <%= content_tag(:span, @installment.status, :class => "label label-#{@installment.status}") %>
	<%if !@installment.complete?  %>
        <%= link_to "Mark as paid", new_business_membership_installment_payment_path(@business, @installment.membership, @installment), :remote => true %>
    <% end %>
	</p>
<% end %>

<% if can? :manage, @business.transactions.build %>
<h3>Transactions</h3>
<%= render :layout => 'transactions_table', :locals => {:transactions => @installment.transactions} do |transaction| %>
  <% if can? :manage, @business.transactions.build %>
   <%= link_to content_tag(:i, "", :class => "icon-edit"), edit_business_transaction_path(transaction.business, transaction), :remote => true %>
   <%= link_to content_tag(:i, "", :class => "icon-trash"), business_transaction_path(transaction.business, transaction), :confirm => 'Are you sure you want to delete this item?', :method => 'delete' %>
  <% end %>   
<% end %>
<% end %>

<%= link_to 'Edit', edit_business_membership_installment_path(@business, @membership, @installment) %> |
<%= link_to 'Back', business_membership_path(@business, @membership) %>
